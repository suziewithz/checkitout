<section class="history-card mdl-shadow--2dp">
    <table class="mdl-data-table mdl-js-data-table">
        <thead>
        <tr>
            <th colspan="3">{{orderDate}} 신청</th>
        </tr>
        </thead>
        <tbody>
        {{#books}}
            <tr>
                <td class="mdl-data-table__cell--non-numeric">{{book.title}}</td>
                <td>{{price}}원</td>
                <td>
                    <div id="order-{{srl}}" data-order="{{srl}}"
                         class="icon material-icons {{status.icon}}">{{status.icon}}</div>
                    <div class="mdl-tooltip" for="order-{{srl}}">
                        {{#if status.message}}
                            {{status.message}}
                        {{else}}
                            {{status.statusName}}
                        {{/if}}
                    </div>
                </td>
            </tr>
        {{/books}}
        </tbody>
    </table>
</section>